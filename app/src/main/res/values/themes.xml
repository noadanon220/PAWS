<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Paws" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/Primary_pink</item>
        <item name="colorPrimaryVariant">@color/Primary_yellow</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/Secondary_pink</item>
        <item name="colorSecondaryVariant">@color/Primary_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/Primary_pink</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/malibu_950</item>
    </style>

</resources>
