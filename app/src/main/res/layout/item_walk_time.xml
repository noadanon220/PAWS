<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/walkTimeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/bg_grey"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_l">

        <!-- Top Row: Walk Info + Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Emoji -->
            <TextView
                android:id="@+id/walkEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ…"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <!-- Walk Name and Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/walkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Walk"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/walkTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 AM"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark" />

            </LinearLayout>

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/Primary_pink"
                android:textSize="12sp"
                android:minWidth="60dp"
                android:layout_marginEnd="8dp" />

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notes"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Delete walk"
                app:tint="@color/orange_600" />

        </LinearLayout>

        <!-- Bottom Row: Completion Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/walkCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:buttonTint="@color/Primary_pink" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/walkStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="âœ… Walk Completed"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lima_600" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>