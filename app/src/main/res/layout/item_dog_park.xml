<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parkCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_l">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Park info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/parkName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Central Dog Park"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/parkDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5km"
                        android:textColor="@color/Primary_pink"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/parkRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 4.5"
                        android:textColor="@color/Primary_yellow"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/favoriteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_favorite_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"
                    app:tint="@color/gray_dark" />

                <ImageView
                    android:id="@+id/directionsButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_directions"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Get directions"
                    app:tint="@color/malibu_600" />

            </LinearLayout>

        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/parkAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Main Street, Your City"
            android:textColor="@color/text_gray_dark"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/location_ic"
            android:drawablePadding="8dp"
            android:drawableTint="@color/gray_dark"
            android:gravity="center_vertical" />

        <!-- Facilities chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/facilitiesChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:chipSpacing="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>