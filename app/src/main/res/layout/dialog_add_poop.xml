<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Color Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Poop Color"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/bg_light_grey"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/poopColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Consistency Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Consistency"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/bg_light_grey"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/poopConsistencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Notes Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Notes (Optional)"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/bg_light_grey"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/poopNotes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Image Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo (Optional)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/poopImagePreview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_background_light"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Poop image preview" />

        <!-- Add Image Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addImageButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“· Add Photo"
            android:textColor="@color/orange_600"
            app:strokeColor="@color/orange_600"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</LinearLayout>