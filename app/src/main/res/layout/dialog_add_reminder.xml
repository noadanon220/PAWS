<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Selected date "pill" (click to change) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/datePickerButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Select date"
            app:icon="@drawable/calendar_ic"
            app:iconTint="@color/Primary_pink"
            android:textColor="@color/Primary_pink"
            app:cornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/Primary_pink"
            android:layout_marginBottom="16dp" />

        <!-- Reminder Type (replaces title) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Reminder type"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/bg_light_grey"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/reminderTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dog selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Select dog"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/bg_light_grey"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/dogSelectionSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Time -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/timePickerButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select time"
            android:textColor="@color/Primary_pink"
            app:strokeColor="@color/Primary_pink"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Location (optional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location (optional)"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/bg_light_grey"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reminderLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (optional)"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/bg_light_grey"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reminderNotes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
