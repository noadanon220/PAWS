<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Reminder Title"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/bg_light_grey"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reminderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Location Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Location (Optional)"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/bg_light_grey"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reminderLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date and Time Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Date Picker Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/datePickerButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Select Date"
            android:textColor="@color/Primary_pink"
            android:textSize="14sp"
            app:strokeColor="@color/Primary_pink"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/calendar_ic"
            app:iconTint="@color/Primary_pink" />

        <!-- Time Picker Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/timePickerButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Select Time"
            android:textColor="@color/Primary_pink"
            android:textSize="14sp"
            app:strokeColor="@color/Primary_pink"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Reminder Type (Optional Enhancement) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/reminderTypeChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:chipSpacing="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVetAppointment"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¥ Vet"
            android:checked="true"
            app:chipBackgroundColor="@color/Secondary_pink"
            app:checkedIconTint="@color/Primary_pink" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVaccination"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’‰ Vaccination"
            app:chipBackgroundColor="@color/Secondary_pink"
            app:checkedIconTint="@color/Primary_pink" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGrooming"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ‚ï¸ Grooming"
            app:chipBackgroundColor="@color/Secondary_pink"
            app:checkedIconTint="@color/Primary_pink" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMedication"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’Š Medication"
            app:chipBackgroundColor="@color/Secondary_pink"
            app:checkedIconTint="@color/Primary_pink" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOther"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Other"
            app:chipBackgroundColor="@color/Secondary_pink"
            app:checkedIconTint="@color/Primary_pink" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>