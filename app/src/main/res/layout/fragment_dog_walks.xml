<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_light"
    android:padding="@dimen/padding_l">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Month/Year Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/previousMonthButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous month"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/Primary_pink" />

                <TextView
                    android:id="@+id/monthYearText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="July 2025"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nextMonthButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next month"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/Primary_pink" />

            </LinearLayout>

            <!-- Scrollable Week Calendar -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/weekCalendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                tools:listitem="@layout/item_calender_day" />

            <!-- Fixed Walk Times Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_s"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_s"
                android:paddingEnd="@dimen/padding_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_l"
                    android:text="Fixed Walk Times"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Morning Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:layout_margin="@dimen/margin_s">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_m">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="@dimen/margin_l"
                            android:src="@drawable/ic_morning" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Morning"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/morningTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="07:00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_body" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/edit_ic"
                            app:tint="@color/gray_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/editMorningTimeButton" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Afternoon Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:layout_margin="@dimen/margin_s">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_m">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="@dimen/margin_l"
                            android:src="@drawable/ic_afternoon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Afternoon"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/afternoonTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="13:00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_body" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/edit_ic"
                            app:tint="@color/gray_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/editAfternoonTimeButton" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Evening Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:layout_margin="@dimen/margin_s">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_m">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="@dimen/margin_l"
                            android:src="@drawable/ic_evening" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Evening"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/eveningTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="19:00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_body" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/edit_ic"
                            app:tint="@color/gray_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/editEveningTimeButton" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Daily Tracking Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_s"
                android:paddingEnd="@dimen/padding_s">

                <TextView
                    android:id="@+id/selectedDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_l"
                    android:text="Daily Walk Log"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Morning Walk Tracking -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_margin="@dimen/margin_s"
                    app:strokeColor="@color/bg_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_s">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="🌅"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Morning Walk"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_body"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/morningWalkTimeDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="08:00 AM"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/morningWalkCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:buttonTint="@color/Primary_pink" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Afternoon Walk Tracking -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_margin="@dimen/margin_s"
                    app:strokeColor="@color/bg_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_s">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="☀️"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Afternoon Walk"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_body"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/afternoonWalkTimeDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02:00 PM"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/afternoonWalkCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:buttonTint="@color/Primary_pink" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Evening Walk Tracking -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_margin="@dimen/margin_s"
                    app:strokeColor="@color/bg_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_s">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="🌙"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evening Walk"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_body"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/eveningWalkTimeDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="08:00 PM"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/eveningWalkCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:buttonTint="@color/Primary_pink" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Additional spacing for better scrolling experience -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>