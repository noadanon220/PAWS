<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:padding="@dimen/padding_l"
            android:background="@color/white">

            <TextView
                android:id="@+id/dogNameTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight_log_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Primary_pink" />

        </LinearLayout>

        <!-- Weights list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weightsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_s"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_weight"
                android:layout_marginBottom="@dimen/margin_l"
                app:tint="@color/gray_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_weights_yet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_plus_to_add_first_weight"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_80"
        android:contentDescription="@string/add_weight"
        app:srcCompat="@drawable/round_add_24"
        app:backgroundTint="@color/Primary_yellow"
        app:tint="@color/black" />

</RelativeLayout>