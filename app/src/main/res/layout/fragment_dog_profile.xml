<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dogProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <!-- Dog image -->
        <ImageView
            android:id="@+id/dogProfile_IMG_header"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:contentDescription="@string/dog_default_image"
            android:scaleType="centerCrop"
            android:src="@drawable/default_dog_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Dog name -->
        <TextView
            android:id="@+id/dogProfile_LBL_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/dog_name_placeholder"
            android:textColor="@color/Primary_pink"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_IMG_header" />

        <!-- Breed + age -->
        <TextView
            android:id="@+id/dogProfile_LBL_breedAndAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/breed_age_placeholder"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_name" />

        <!-- Info cards with CardViews -->
        <LinearLayout
            android:id="@+id/dogProfile_LAYOUT_infoCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_breedAndAge">

            <!-- Card: Color -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:layout_weight="1"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/dogProfile_LBL_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/color_placeholder"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card: Weight -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/dogProfile_LBL_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/weight_placeholder"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card: Birthday -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/dogProfile_LBL_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/birthday_placeholder"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Title: Tags and Personality -->
        <TextView
            android:id="@+id/dogProfile_LBL_tagsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/tags_personality_title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_LAYOUT_infoCards" />

        <!-- Personality tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/dogProfile_CHIPS_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:chipSpacing="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_tagsTitle"
            app:singleLine="false" />

        <!-- Title: Care & Activities -->
        <TextView
            android:id="@+id/dogProfile_LBL_careTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/care_activities_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_CHIPS_tags"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Activities Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dogProfile_RECYCLER_activities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            tools:listitem="@layout/item_card_activity"
            app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_careTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>