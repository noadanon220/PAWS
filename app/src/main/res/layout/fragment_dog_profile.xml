<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dogProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- ×ª×ž×•× ×” ×©×œ ×”×›×œ×‘ -->
    <ImageView
        android:id="@+id/dogProfile_IMG_header"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_dog_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ×©× ×”×›×œ×‘ -->
    <TextView
        android:id="@+id/dogProfile_LBL_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chubby"
        android:textColor="@color/Primary_pink"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_IMG_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ×’×–×¢ + ×’×™×œ -->
    <TextView
        android:id="@+id/dogProfile_LBL_breed_and_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great Pyrenees â€¢ 1 years old"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- ×›×¨×˜×™×¡×™ ×ž×™×“×¢ ×¢× CardViews -->
    <LinearLayout
        android:id="@+id/dogProfile_LAYOUT_infoCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_breed_and_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ×›×¨×˜×™×¡: ×¦×‘×¢ -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="@dimen/margin_s"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F0F0F0">

            <TextView
                android:id="@+id/dogProfile_LBL_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Color\nPyrenees"
                android:textSize="13sp"
                android:textColor="#000000"
                android:gravity="center"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <!-- ×›×¨×˜×™×¡: ×ž×©×§×œ -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_s"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F0F0F0">

            <TextView
                android:id="@+id/dogProfile_LBL_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Weight\n39kg"
                android:textSize="13sp"
                android:textColor="#000000"
                android:gravity="center"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <!-- ×›×¨×˜×™×¡: ×ª××¨×™×š ×œ×™×“×” -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="@dimen/margin_s"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F0F0F0">

            <TextView
                android:id="@+id/dogProfile_LBL_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Birthday\nFeb 14"
                android:textSize="13sp"
                android:textColor="#000000"
                android:gravity="center"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- ðŸ†• ×›×•×ª×¨×ª: Care & Activities -->
    <TextView
        android:id="@+id/dogProfile_LBL_careTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care and Activities"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_LAYOUT_infoCards"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ðŸ†• RecyclerView ××•×¤×§×™ ×œ×›×¨×˜×™×¡×™× -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogProfile_RECYCLER_activities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        tools:listitem="@layout/item_card_activity"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_careTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ×ª×’×™×•×ª: ×ž×¡×•×¨×¡ / ×ž×©×•×‘×‘ -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/dogProfile_CHIPS_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_RECYCLER_activities"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:chipSpacing="8dp"
        app:singleLine="true" />

    <!-- ×›×•×ª×¨×ª: ×ª×’×™× ×•×”×ª× ×”×’×•×ª -->
    <TextView
        android:id="@+id/dogProfile_LBL_tagsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags and Personality"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_CHIPS_status"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ×ª×’×™×•×ª ××™×©×™×•×ª -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/dogProfile_CHIPS_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/dogProfile_LBL_tagsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:chipSpacing="8dp"
        app:singleLine="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
