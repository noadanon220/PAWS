<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with title and search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_180"
            android:orientation="vertical"
            android:padding="@dimen/padding_l"
            android:background="@color/white"
            android:gravity="bottom"
            android:elevation="@dimen/elevation_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HOME_nearby_dog_parks"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Primary_pink"
                android:layout_marginBottom="@dimen/margin_l" />

            <!-- Search bar and location button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:background="@drawable/rounded_background_light"
                    android:queryHint="@string/search_dog_parks"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@null"
                    app:searchIcon="@drawable/ic_search" />

                <!-- Location button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/locationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/get_location"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/location_ic"
                    app:backgroundTint="@color/Primary_yellow"
                    app:tint="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <!-- Map container with progress overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Google Map -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <!-- Progress overlay (spinner) -->
            <FrameLayout
                android:id="@+id/progressOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80FFFFFF"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/Primary_pink" />
            </FrameLayout>
        </FrameLayout>

        <!-- Bottom sheet for selected park -->
        <LinearLayout
            android:id="@+id/parkDetailsBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="@dimen/padding_l"
            android:visibility="gone">


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
