<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:strokeColor="@color/bg_grey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_l">

        <!-- Color Indicator (small circular pill) -->
        <View
            android:id="@+id/poopColorIndicator"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_l"
            android:background="@drawable/bg_circle_shape"
            android:backgroundTint="@color/poop_color_normal" />

        <!-- Text content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poopConsistency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Normal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/poopNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="No additional notes"
                android:textColor="@color/text_gray_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poopDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 15, 2024 09:30"
                android:textColor="@color/gray_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/poopImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_stroked_white"
            android:clipToOutline="true"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
