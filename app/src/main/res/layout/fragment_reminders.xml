<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <LinearLayout
        android:id="@+id/reminders_LAY_header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_l"
        android:paddingEnd="@dimen/padding_l"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/reminders_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminders_title"
            android:textColor="@color/Primary_pink"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/reminders_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reminders_LAY_header"
        android:layout_above="@+id/fabAddReminder"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/padding_l"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_l">

                    <ImageView
                        android:id="@+id/previousMonthButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/previous_month"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_left"
                        app:tint="@color/Primary_pink" />

                    <TextView
                        android:id="@+id/monthYearText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="May 2023"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/nextMonthButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/next_month"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/Primary_pink" />
                </LinearLayout>

                <com.kizitonwose.calendar.view.CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="@dimen/margin_l"
                    app:cv_dayViewResource="@layout/calendar_day_layout" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectedDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_l"
                android:background="@color/Secondary_pink"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectedDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Reminders"
                    android:textColor="@color/Primary_pink"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminderCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 reminders"
                    android:textColor="@color/Primary_pink"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remindersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="120dp" />

            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/calendar_ic"
                    android:layout_marginBottom="@dimen/margin_l"
                    app:tint="@color/gray_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_reminders_yet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_plus_to_add_first_reminder"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_l"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/desc_add_reminder"
        app:srcCompat="@drawable/round_add_24"
        app:backgroundTint="@color/Primary_yellow"
        app:tint="@color/black" />

</RelativeLayout>
